<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Original Picture"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="380dp"
                android:layout_height="300dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Taipei Nangang Exhibition Center" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="380dp"
                android:layout_height="300dp"
                app:srcCompat="@drawable/national" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="台北南港展覽館1館、2館. Taipei Nangang Exhibition Center, Hall 1  2. a.k.a TWTC Nangang Exhibition Hall. 展覽活動一覽 · 交通資訊 · 租借場地 · 參觀資訊." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="台北世貿中心" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="380dp"
                android:layout_height="300dp"
                app:srcCompat="@drawable/taipei" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="2. 外貿協會「ITI ENGLISH」英文線上學習頻道將於5月上線，歡迎查看「最新消息」訂閱分享！ 3. 台北世貿中心展覽大樓內，自今年起提供民眾免費閱讀好書及報章雜誌 ..." />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>