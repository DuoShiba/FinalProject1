<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextResultActivity">
    <ScrollView android:id="@+id/contencrollView"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/active"
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:ellipsize="end"
            android:fadeScrollbars="false"
            android:maxEms="30"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:singleLine="false"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="2dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:text="More"
            android:textSize="8dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
<!--
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Original Picture"
                        android:gravity="center"/>

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="380dp"
                        android:layout_height="300dp" /> -->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Taipei Nangang Exhibition Center"
                        android:background="#FFFFFF"
                        android:id="@+id/title1"/>

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="380dp"
                        android:layout_height="300dp"
                        app:srcCompat="@drawable/taipei" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="Taipei Nangang Exhibition Center"
                        android:maxLines="5"
                        android:id="@+id/snippet1"/>

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="380dp"
                        android:layout_height="30dp"
                        android:text="網站連結"
                        android:background="#FFFFBB"
                        android:textColor="#0000FF"/>
                    <!--
                                        <ImageButton
                                            android:id="@+id/imageButton"
                                            android:layout_width="380dp"
                                            android:layout_height="300dp"
                                            app:srcCompat="@drawable/shibainu1" /> -->

                </LinearLayout>

            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="台北世貿中心"
                        android:background="#FFFFFF"
                        android:id="@+id/title2"/>
                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="380dp"
                        android:layout_height="300dp"
                        app:srcCompat="@drawable/taipei" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="Taipei Nangang Exhibition Center"
                        android:maxLines="5"
                        android:id="@+id/snippet2"/>
                    <Button
                        android:id="@+id/button2"
                        android:layout_width="380dp"
                        android:layout_height="30dp"
                        android:text="網站連結"
                        android:background="#FFFFBB"
                        android:textColor="#0000FF"/>
<!--
                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="380dp"
                        android:layout_height="300dp"
                        app:srcCompat="@drawable/shibainu2" /> -->
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            </TableRow>

            <TableRow
                android:layout_width="380dp"
                android:layout_height="300dp" />
        </TableLayout>


    </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>